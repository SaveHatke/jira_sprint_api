# Jira connection
JIRA_BASE_URL=https://jira.yourcompany.com
JIRA_PAT=your_personal_access_token
# Optional: if your Jira DC expects Basic auth instead of Bearer, set:
# JIRA_AUTH_SCHEME=basic
# JIRA_USERNAME=your_username_or_email

# Default board for smart resolver (can still call list endpoint with board_id path param)
JIRA_BOARD_ID=1

# HTTP / retry
HTTP_TIMEOUT_SECONDS=20
HTTP_MAX_RETRIES=4
HTTP_BACKOFF_MIN_SECONDS=0.5
HTTP_BACKOFF_MAX_SECONDS=6.0

# Cache
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60
CACHE_MAXSIZE=256

# Logging
LOG_LEVEL=INFO
